<%= turbo_frame_tag "create-vision-board-image-#{@image_id}" do %>
  <% flash.each do |type, message| %>
    <section class=<%= type %>>
      <p><%= message %></p>
    </section>
  <% end %>
  <%= simple_form_for @vision_board_image do |f| %>
    <%= f.collection_select :vision_board_id, @vision_boards, :id, :title %>
    <%= f.input :image_id, as: :hidden, input_html: { value: @image_id } %>
    <%= f.button :submit, "Add Image" %>
  <% end %>
<% end %>
