<% @uploads.each.with_index(1) do |image, index|  %>
  <div class="grid gap-4">
    <div id="upload-<%= index %>">
      <p class="text-center">
        <%=  image.name %>
      </p>
      <%= link_to vision_board_image_path(image_id: image.id, vision_board_id: @vision_board.id), data: { "turbo_confirm": "Do you want to delete this image?", turbo_method: :delete } do %>
        <%= image_tag url_for(image.image.variant(resize_to_limit: [300, 300])), class: "h-auto max-w-full rounded-lg" %>
      <% end %>
    </div>
  </div>
<% end %>
