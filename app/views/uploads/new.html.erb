<%= turbo_frame_tag "image-upload" do %>
  <%= render partial: "shared/flash" %>

  <%= simple_form_for @upload do |f| %>
    <%= f.input :name %>
    <%= f.input :image, as: :file %>
    <%= f.collection_select :vision_board_id, @vision_boards, :id, :title %>
    <%= f.button :submit %>
  <% end %>
<% end %>
