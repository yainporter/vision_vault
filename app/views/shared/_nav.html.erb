      <%= image_tag "Logo.png", alt: "Vision Vault Logo", class: "h-9" %>
      <span class="self-center text-2xl font-semibold whitespace-nowrap text-amber">Vision Vault</span>
    <% end %>
    <%= button_tag type: 'button', 
